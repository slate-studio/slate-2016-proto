!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "The Middleman"
    %link{:href => "//fonts.googleapis.com/css?family=Radley:400,400italic", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic", :rel => "stylesheet", :type => "text/css"}
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    = partial 'layouts/_nav'
    .container.type-system-traditional
      = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"
